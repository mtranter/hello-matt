{
    "compilerOptions": {
      "target": "ES2020",
      "lib": [
        "ES2020"
      ],
      "noEmit": false,
      "module": "commonjs",
      "outDir": "./dist",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
    },
    "exclude": ["node_modules"]
  }